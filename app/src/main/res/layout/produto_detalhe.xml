<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Carrossel de imagens (URLs) -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerImagemProduto"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <!-- Nome e preço -->
        <TextView
            android:id="@+id/textNomeProduto"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textPrecoProduto"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Favoritar + botão comprar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnVerOpcoes"
                android:text="Ver opções de compra"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imgFavorito"
                android:src="@drawable/ic_favorite_border"
                android:layout_marginStart="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp" />
        </LinearLayout>

        <!-- Gráfico -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/graficoPreco"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp" />

        <!-- Melhor preço -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgLoja"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/textMelhorPreco"
                android:text="R$ 529,00 à vista"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnIrLoja"
                android:text="Ir à loja"
                android:layout_marginStart="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Avaliações -->
        <TextView
            android:text="Avaliação dos usuários"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:stepSize="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textQtdAvaliacoes"
            android:text="(0 avaliações)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
