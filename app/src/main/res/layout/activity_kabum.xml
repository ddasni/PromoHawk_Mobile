<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- EspaÃ§o superior -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- FAIXA COM LOGO SOBREPOSTA -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <!-- Faixa colorida (Amazon) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:background="#141ff5" />

        <ImageView
            android:id="@+id/logokabum"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/kabum"
            android:scaleType="fitCenter"
            android:elevation="4dp" />
    </FrameLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Produto Exemplo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#FFFFFF"
                android:cardCornerRadius="12dp"
                android:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Produto Exemplo"
                        android:textColor="#333"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="R$ 199,90"
                        android:textColor="#4CAF50"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
