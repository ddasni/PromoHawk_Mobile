<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_cupom_preto"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:gravity="center_horizontal"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tvData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27 de junho de 2025"
        android:background="@drawable/bg_data_chip"
        android:textColor="#FFFFFF"
        android:padding="4dp"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDesconto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30% de desconto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cupom de 30% para usar na Americanas"
        android:textColor="#DDDDDD"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvVerCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver código →"
        android:background="@drawable/bg_botao_branco"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="14sp" />

    <!-- Layout do código do cupom -->
    <LinearLayout
        android:id="@+id/layoutCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROMO30"
            android:textStyle="bold"
            android:backgroundTint="#1ED760"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="@drawable/bg_codigo_chip" />

        <Button
            android:id="@+id/btnCopiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copiar"
            android:backgroundTint="#FF3B30"
            android:textColor="#FFFFFF"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
