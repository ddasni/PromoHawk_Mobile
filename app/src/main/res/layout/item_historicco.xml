<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:background="@drawable/card_background"
    android:padding="16dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/dataCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 de Junho de 2023"
        android:textSize="14sp"
        android:textColor="#666666"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="#EEEEEE"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagemProdutoHistorico"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/produto"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imagemProdutoHistorico"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nomeProdutoHistorico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome do Produto"
                android:textSize="16sp"
                android:textColor="#222222"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/precoPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Pago: R$ 999,99"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/lojaCompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Comprado em: Amazon"
                android:textSize="14sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/botaoComprarNovamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="end"
        android:text="Comprar Novamente"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/holo_green_dark"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"/>
</LinearLayout>