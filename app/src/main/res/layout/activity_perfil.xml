<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- DADOS PESSOAIS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DADOS PESSOAIS"
            android:textStyle="bold"
            android:textColor="#777"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:cardElevation="3dp"
            android:cardCornerRadius="16dp"
            android:cardBackgroundColor="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:id="@+id/layoutDadosPessoais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNome"
                        android:text="Carlos Eduardo"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtEmail"
                        android:text="edu.edusousa92@gmail.com"
                        android:textSize="16sp"
                        android:textColor="#444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtTelefone"
                        android:text="(11) 99118-1592"
                        android:textSize="16sp"
                        android:textColor="#444"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/btnEditarDados"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Editar dados"
                    android:layout_marginTop="4dp"
                    app:tint="#555" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- ENDEREÇOS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENDEREÇOS"
            android:textStyle="bold"
            android:textColor="#777"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnAdicionarEndereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar novo endereço"
            android:drawableLeft="@android:drawable/ic_input_add"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp" />

        <!-- COMPRAS PASSADAS -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMPRAS PASSADAS"
            android:textStyle="bold"
            android:textColor="#777"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnHistoricoCompras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver histórico de compras"
            android:drawableLeft="@android:drawable/ic_menu_agenda"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:layout_marginBottom="40dp" />

        <!-- DELETAR CONTA -->
        <TextView
            android:id="@+id/btnDeletarConta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deletar conta PromoHawk"
            android:textColor="#D32F2F"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</ScrollView>
