<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <LinearLayout
      android:padding="16dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <TextView
        android:text="Produtos em Destaque"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridLayout
        android:id="@+id/gridProdutos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal">

      <!-- Xbox Series S -->
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:orientation="vertical"
          android:layout_margin="8dp"
          android:gravity="center_horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/xbox_series_s"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="8dp" />

        <TextView
            android:text="Xbox Series S"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="R$ 2.200,00"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/precoAntigoXboxS"
            android:text="R$ 2.800,00"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      </LinearLayout>

      <!-- Xbox Series X -->
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:orientation="vertical"
          android:layout_margin="8dp"
          android:gravity="center_horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/xbox_series_x"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="8dp" />

        <TextView
            android:text="Xbox Series X"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="R$ 2.200,00"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/precoAntigoXboxX"
            android:text="R$ 2.800,00"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      </LinearLayout>

      <!-- Playstation 5 -->
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:orientation="vertical"
          android:layout_margin="8dp"
          android:gravity="center_horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/playstation_5"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="8dp" />

        <TextView
            android:text="Playstation 5"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="R$ 2.200,00"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/precoAntigoPS5"
            android:text="R$ 2.800,00"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      </LinearLayout>

      <!-- Playstation 4 -->
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:orientation="vertical"
          android:layout_margin="8dp"
          android:gravity="center_horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/playstation_4"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:padding="8dp" />

        <TextView
            android:text="Playstation 4"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="R$ 2.200,00"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/precoAntigoPS4"
            android:text="R$ 2.800,00"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      </LinearLayout>

    </GridLayout>

  </LinearLayout>
</ScrollView>
