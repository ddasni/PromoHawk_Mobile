<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Central de Suporte"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false">

            <EditText
                android:id="@+id/edtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome completo"
                android:background="@drawable/edittext_borda"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#888888"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edtMensagem"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Descreva sua dÃºvida..."
                android:background="@drawable/edittext_borda"
                android:padding="12dp"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textColorHint="#888888" />

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar"
                android:backgroundTint="#00C4B4"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outros meios de contato"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/btnEmail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/email"
                android:contentDescription="Email"
                android:layout_margin="12dp" />

            <ImageView
                android:id="@+id/btnWhatsapp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/whatsapp"
                android:contentDescription="WhatsApp"
                android:layout_margin="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
