<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Categorias em Destaque"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/gridCategorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal">

            <!-- Eletrônicos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgEletronicos"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/maquina"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eletrônicos"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Video Games -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgVideoGames"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/videogame"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Games"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Smartphones -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgSmartphones"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/celular"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smartphones"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Calçados -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgCalcados"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/tenis"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calçados"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Livros -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgLivros"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/livros"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Livros"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>
</ScrollView>
