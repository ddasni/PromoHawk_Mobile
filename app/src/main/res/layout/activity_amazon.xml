<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Espaço superior -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- FAIXA COM LOGO SOBREPOSTA -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <!-- Faixa colorida (Amazon) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="top"
            android:background="#293d52" />

        <!-- Logo redonda sobreposta -->
        <ImageView
            android:id="@+id/logoamazon"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/amazon"
            android:scaleType="fitCenter"
            android:elevation="4dp" />
    </FrameLayout>

    <!-- ÁREA DE PRODUTOS -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Produto 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/produtoteste3" />

                    <TextView
                        android:text="Smart TV 55'' 4K UHD"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="R$ 3.599,00"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Este item é apenas ilustrativo e não será vendido."
                        android:textSize="12sp"
                        android:textColor="#888"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Produto 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/produtoteste2" />

                    <TextView
                        android:text="Notebook Gamer RTX 3060"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="R$ 7.199,00"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Este item é apenas ilustrativo e não será vendido."
                        android:textSize="12sp"
                        android:textColor="#888"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Produto 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="12dp"
                android:background="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/produtoteste4" />

                    <TextView
                        android:text="Fone Bluetooth JBL Tune 510BT"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="R$ 249,00"
                        android:textSize="16sp"
                        android:textColor="#4CAF50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Este item é apenas ilustrativo e não será vendido."
                        android:textSize="12sp"
                        android:textColor="#888"
                        android:layout_marginTop="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
